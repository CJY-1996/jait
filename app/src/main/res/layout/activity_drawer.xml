<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#FFFFFF"
    android:id="@+id/drawer">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/drawer_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="right"
            android:background="#00000000"
            android:src="@drawable/ic_nav_close_24" />

        <ImageView
            android:id="@+id/drawer_profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/drawer_nav_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/bmjua_ttf"
            android:textSize="25sp"
            android:textColor="#AA000000"
            android:layout_marginBottom="10dp"
            android:text="닉네임 or 이메일" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <ImageButton
            android:id="@+id/drawer_nav_reprofile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_person_pin_24"
            android:layout_marginLeft="20dp"
            android:background="#AAF9C5EA"
            android:textSize="25dp"
            android:text="프로필 설정" />
        <TextView
            android:id="@+id/drawer_nav_text_reprofile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="프로필 사진 변경"
            android:background="#AAF9C5EA"
            android:gravity="center|center"
            android:textSize="20sp"
            android:textColor="#AA000000"
            android:fontFamily="@font/bmjua_ttf"
            android:layout_marginRight="20dp"
            android:padding="2dp"/>
</LinearLayout>
    </LinearLayout>

    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="bottom"
        >

        <Button
            android:id="@+id/drawer_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="로그 아웃"
            android:textColor="#AA000000"
            android:fontFamily="@font/bmjua_ttf"
            android:background="@drawable/logout_button_border"/>
    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>
</com.google.android.material.circularreveal.CircularRevealFrameLayout>