<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LookActivity">

    <TextView
        android:id="@+id/look_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#000000"
        tools:text = "TITLE"
        android:background="@drawable/look_title_underbar"/>
    <TextView
        android:id="@+id/look_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_margin="15dp"
        android:textColor="#000000"
        tools:text = "Contents"/>
    <Button
        android:id="@+id/look_getchat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="모임 참가하기"
        android:background="@drawable/look_button"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#323232"/>

</LinearLayout>